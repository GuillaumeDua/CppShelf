{
    "name": "cppshelf - C++ development container",
    "dockerComposeFile": "docker-compose.yaml",
    // or image with a specific tag ?
    "service": "cpp-toolchain-dev",
    "workspaceFolder": "/workspace",
    "remoteUser": "vscodeuser",
    "features": {
        "git": "os-provided",
        "sshd": "latest"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "remote.SSH.showLoginTerminal": true
            },
            "extensions": [
                "ms-vscode.cpptools",
                "twxs.cmake",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cmake-tools",
                "Gruntfuggly.todo-tree",
                "enkia.tokyo-night"
            ]
        },
        "postCreateCommand": {
            "git-safe-dir-workspace": "git config --global --add safe.directory /workspace"
        }
    }
}
// features: https://github.com/devcontainers/features